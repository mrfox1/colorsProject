<h3>
  Выбор категорий
</h3>
<%= render 'categories/categories' %>
<%= link_to 'Создать пост', new_post_path if current_user %>
<% @posts.each do |post| %>
  <h3>
    <%= link_to post.title, post %>
  </h3>
  <%= link_to 'Редактировать', edit_post_path(post) if author(post) %>
  <%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Вы уверены?'} if author(post) %>
<% end %>
